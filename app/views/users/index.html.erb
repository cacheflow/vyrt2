
<div class="container">
  <div ng-controller="usersController" class="row">
    <h1>Users</h1>
    <br>

    Search: 
    <input 
     type="text" 
     search
     model="user" 
     update="users"
     ng-model="search">

    <table class="table table-striped table-bordered">
      <thead>
        <th> Name</th>
        <th>Email</th>
        <th>Age</th>
        <th>Location</th>
        <th>Created At</th>
         <th>Image</th>
      </thead>
      <tbody>
        <tr ng-repeat="user in users | filter:search" class="user">
          <td>{{user.name}}</td>
          <td>{{user.email}}</td>
           <td>{{user.age}}</td>
          <td>{{user.location}}</td>
          <td>{{user.created_at}}</td>
          <td>{{user.avatar}}
            <img ng-src='{{user.avatar}}'></img>
          </td>

        </tr>
      </tbody>
    </table>
    <br>
  </div>
</div>
